					"mode": "raw",
					"raw": "{\n    \"processId\": \"test-process\",\n    \"datasetId\": \"test-asset\",\n    \"participantId\": \"4363900f-3451-48a1-b2eb-b92dbc47677e\",\n    \"agreementId\": \"test-agreement\",\n    \"sourceDataAddress\": {\n        \"@type\": \"HttpData\",\n        \"baseUrl\": \"https://jsonplaceholder.typicode.com/comments/42\"\n    },\n    \"destinationDataAddress\": {\n        \"@type\": \"HttpData\"\n    },\n    \"transferType\": \"Pull\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{DATAPLANE_HOST}}/api/v1/{{PARTICIPANT_ID}}/dataflows/prepare",
					"host": [
						"{{DATAPLANE_HOST}}"
					],
					"path": [
						"api",
						"v1",
						"{{PARTICIPANT_ID}}",
						"dataflows",
						"prepare"
					]
				}
			},
			"response": []
		},
		{
			"name": "Start Dataflow",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code < 300 && pm.response.code >= 200) {",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson).to.have.property('dataAddress');",
							"    pm.expect(responseJson.dataAddress).to.have.property('properties');",
							"    pm.expect(responseJson.dataAddress.properties).to.have.property('url');",
							"    pm.expect(responseJson.dataAddress.properties.url).to.exist;",
							"",
							"    const url = responseJson.dataAddress.properties.url;",
							"    pm.environment.set(\"PUBLIC_URL\", url);",
							"",
							"    pm.expect(responseJson.dataAddress.properties).to.have.property('token');",
							"    const token = responseJson.dataAddress.properties.token;",
							"    pm.environment.set(\"API_KEY\", token);",
							"}",
							"",
							"pm.test(\"Status code is >=200 and <300\", function () {",
							"    pm.expect(pm.response.code < 300 && pm.response.code >= 200).to.be.true",
							"});",
							"pm.test(\"Public URL is set\", function(){",
							"    pm.expect(pm.environment.get(\"PUBLIC_URL\")).not.to.be.undefined",
							"})",
							"",
							"",
							"pm.test(\"API is set\", function(){",
							"    pm.expect(pm.environment.get(\"API_KEY\")).not.to.be.undefined",
							"})",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
